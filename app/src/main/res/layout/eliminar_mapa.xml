<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lyMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivEliminar"
                android:layout_width="1000px"
                android:layout_height="1200px"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnMostrarMapasEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="MostrarMapasEliminar"
                android:text="MOSTRAR MAPAS" />
            <Button
                android:id="@+id/btnEliminarMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="EliminarMapaBD"
                android:text="ELIMINAR MAPA" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtNombreImagenEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Nombre Imagen" />

    </LinearLayout>
</ScrollView>